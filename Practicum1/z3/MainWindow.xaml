<Window x:Class="z3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:z3"
        mc:Ignorable="d"
        Title="Установка свойств в разметке" Height="280" Width="525">
    <StackPanel>
        <Rectangle Fill="DarkMagenta" Width="100" Height="100">
        </Rectangle>
        <Rectangle Width="100" Height="100" Margin="10">
            <Rectangle.Fill>
                <LinearGradientBrush>
                    <GradientStop Color="AliceBlue" Offset="0"></GradientStop>
                    <GradientStop Color="DarkCyan" Offset="1"></GradientStop>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
    </StackPanel>
</Window>
