        <Label Content="Введите скорость 3" HorizontalAlignment="Left" Margin="164,140,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="speed3" HorizontalAlignment="Left" Height="23" Margin="164,171,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" PreviewTextInput="speed3_PreviewTextInput"/>
        <Button Content="Вычислить среднюю скорость" HorizontalAlignment="Left" Margin="10,212,0,0" VerticalAlignment="Top" Width="274" Click="Button_Click"/>
        <Label Name="res" Content="" HorizontalAlignment="Left" Margin="10,247,0,0" VerticalAlignment="Top"/>

    </Grid>
